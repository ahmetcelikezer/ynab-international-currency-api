#######################################################################

# The port that the web server will listen on
PORT=1881

# The environment that the web server is running in. Valid values are "local", "development", "test" and "production"
NODE_ENV=production

# When debug is true, the web server will output more detailed error messages
DEBUG=false

# Connection informations of the redis server
REDIS_URL=redis://redis:6379

# Connection informations of the postgresql server
DATABASE_URL=postgres://moon_man:goodbye@0.0.0.0:5432/ynab_ica

# The number of rounds to use when hashing the password
AUTH_PASSWORD_SALT_ROUNDS=10

# The secret used to sign the JWT tokens
AUTH_JWT_SECRET_KEY=secret_jwt
AUTH_JWT_REFRESH_SECRET_KEY=secret_jwt_refresh

# Auth expiration time in seconds
AUTH_JWT_EXPIRATION_TIME_SECOND=3600 # 1 hour
AUTH_JWT_REFRESH_EXPIRATION_TIME_SECOND=2592000 # 30 days

# API URL for the YNAB API
AUTH_JWT_ISSUER=http://localhost:1881/v1

# Client URL for the YNAB API
AUTH_JWT_AUDIENCE=http://localhost:1596
